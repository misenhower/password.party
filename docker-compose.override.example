version: '2'

# This adds config options for use with nginx-proxy:
# https://github.com/jwilder/nginx-proxy

# Alternatively, a public port for nginx could be exposed here.

services:

  nginx:
    environment:
      VIRTUAL_HOST: password.party,www.password.party
      LETSENCRYPT_HOST: password.party,www.password.party
      LETSENCRYPT_EMAIL: matt@isenhower.com
    networks:
      - default
      - nginx-proxy

networks:
  nginx-proxy:
    external:
      name: nginxproxy_default
